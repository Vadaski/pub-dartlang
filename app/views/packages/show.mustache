<div class="page package">
  <article>
    <header class="package-heading">
      <h1>
        {{package.name}}
        <small class="version">
          {{package.latest_version.version}}
        </small>
      </h1>
      {{#package.description}}
        <p class="lead">
          {{package.description}}
        </p>
      {{/package.description}}
    </header>

    <aside class="variable-buttons">
      {{! TODO(amouravski): Make a better installation page. }}
      <a href="/doc" class="btn btn-primary" role="button">
        Installing
      </a>

      {{#package.homepage}}
        <a href="{{package.homepage}}" class="btn btn-default external-link"
            role="button" target="_blank">
          Homepage
        </a>
      {{/package.homepage}}

      {{#package.documentation}}
        <a href="{{package.documentation}}" class="btn btn-default external-link"
            role="button" target="_blank">
          Documentation
        </a>
      {{/package.documentation}}

      {{! TODO(amouravski): Make a versions page. }}
      <a href="{{package.versions}}" class="btn btn-default" role="button">
        Versions
      </a>
    </aside>

    <div class="content">
      {{#readme}}
        <section id="readme" class="user-file">
          <h2 class="no-nav-link">{{readme_filename}}</h2>
          {{&readme}}
        </section>
      {{/readme}}

      {{#changelog}}
        <section id="changelog" class="user-file">
            <h2 class="no-nav-link">{{changelog_filename}}</h2>
          {{&changelog}}
        </section>
      {{/changelog}}
  </article>

  <aside class="metadata">
    <section class="details">
      <h1>
        Details
      </h1>
      <div class="metadata-body">

        <dl>
          <dt>{{package.authors_title}}</dt>
          <dd>{{& package.authors_html}}</dd>
          <dt>{{package.uploaders_title}}</dt>
          <dd>{{& package.uploaders_html}}</dd>
        </dl>
      </div>
    </section>

    <section class="libraries">
      <h1>
        Libraries
      </h1>
      <div class="metadata-body">
        {{#package.latest_version.import_examples}}
          <ul>
            <li class="library">
              {{package}}/{{library}}
            </li>
          </ul>
        {{/package.latest_version.import_examples}}
      </div>
    </section>

    <aside class="share-buttons">
      <div class="g-plusone" data-annotation="none"></div>
      &nbsp;
      <a href="https://twitter.com/share" class="twitter-share-button"
          data-count="none" data-hashtags="dartlang">Tweet</a>
    </aside>
  </aside>
</div>
